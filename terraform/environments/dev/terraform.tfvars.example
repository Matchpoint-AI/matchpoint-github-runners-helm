# Rackspace Spot Configuration
# Copy this to terraform.tfvars and fill in values

# Required: Get from GitHub Actions secrets or local environment
# rackspace_spot_token = "your-token-here"  # From RACKSPACE_SPOT_API_TOKEN
# github_token         = "your-github-token" # With repo access

# Cloudspace configuration
cloudspace_name    = "matchpoint-runners-dev"
region             = "us-central-dfw-1"
kubernetes_version = "1.31.1"
ha_control_plane   = false

# Node pool configuration
# Server class based on Cloud Run equivalent (2 vCPU, 4GB RAM)
server_class = "gp.vs1.medium-dfw"
bid_price    = 0.03  # USD per hour

# Autoscaling
min_nodes = 0   # Scale to zero when idle
max_nodes = 10  # Maximum concurrent runners

# Optional: Slack webhook for preemption alerts
# preemption_webhook = "https://hooks.slack.com/services/..."

# Git configuration
git_repo_url        = "https://github.com/Matchpoint-AI/matchpoint-github-runners-helm"
git_target_revision = "main"

# Debug
write_kubeconfig = true
